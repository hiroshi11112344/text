    <!-- ランキング -->
    <% if @quiz_result.present? %>
    <div class="quiz-result-container">
        <% @quiz_result.each_with_index do |result, index| %>
          <p>
            <span class="index_xxx">順位 <%= index + 1%></span>
            <span class="username"><%= result.user.name %> </span>
            <span class="time-spent">tame:<%= Time.at(result.time_spent.to_i).utc.strftime("%H:%M:%S") %></span>
          </p>
        <% end %>
